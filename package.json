{
  "name": "nodejs-ts-boilerplate",
  "description": "Bleeding edge NodeJS Typescript boilerplate",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "get-requirements": "node load-requirements.js",
    "start": "ts-node-dev $(yarn --silent get-requirements) --respawn src/index.ts",
    "serve": "ts-node $(yarn --silent get-requirements) src/index.ts",
    "lint": "eslint './src/**/*.ts' --fix",
    "typeorm": "ts-node $(yarn --silent get-requirements) ./node_modules/.bin/typeorm",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/faker": "^4.1.9",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "apollo-server-testing": "^2.10.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "eslint-plugin-unused-imports": "^0.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-environment-node": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "sqlite3": "^4.1.1",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "apollo-server": "^2.25.4",
    "graphql": "^14.6.0",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.22",
    "typeorm-typedi-extensions": "^0.2.3"
  }
}
